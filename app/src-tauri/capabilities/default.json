{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-download-write",
    "core:path:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$HOME/.local/share/facepass/**"
        },
        {
          "path": "$DATA/facepass/**"
        }
      ]
    },
    "dialog:default"
  ]
}
